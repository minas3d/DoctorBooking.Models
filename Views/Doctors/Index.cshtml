@model IEnumerable<DoctorBooking.Models.Doctor>
@{
    ViewData["Title"] = "Doctors";
}

<h2>Doctors List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Doctor</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FullName</td>
                <td>@doctor.Specialization</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
